{% block title %}
	{{'home.sicad.title'|trans}}
{% endblock %}
{% block stylesheets %}{% endblock %}


{% block content %}


	<div
		class="col-12 d-flex justify-content-start card-home">

		<!-- Card list article not valid -->
		<div class="col-sm-12 col-lg-4 col-xl-4 col-md-6">
			<div
				class="card card-stats">
				<!-- Card body -->
				<div class="card-body">
					<div class="row">
						<div class="col p-1">
							<h5 class="card-title text-uppercase text-muted mb-0">{{'list.article.notvalid'|trans}}</h5>
