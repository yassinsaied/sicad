{% extends 'admin/baseBack.html.twig' %}

{% block title %}{{'update.categ'|trans}}{% endblock %}




{% block content %}


    <div class="col-xl-8">
    <div class="card">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col-8">
            <h3 class="mb-0">
             {{'update.categ'|trans}}
            </h3>
          </div>
    
        </div>
      </div>
      <div class="card-body">
       {{ form_start(updateCategoryForm, {'attr': {'novalidate': 'novalidate'}}) }}
              {{ form_errors(updateCategoryForm) }}
    
          <div class="pl-lg-4">
            <div class="row">
              <div class="col-lg-12">
                <div class="form-group">
                 {{ form_label(updateCategoryForm.name, 'name.categ'|trans, {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateCategoryForm.name , {'attr': {'class': 'form-control'}}) }} 
                </div>
              </div>
            </div>

            <div class="row">
               <div class="col-lg-12">
                <div class="form-group">
                 {{ form_label(updateCategoryForm.labelFr, 'title.categ.fr'|trans, {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateCategoryForm.labelFr , {'attr': {'class': 'form-control'}}) }} 
                </div>
              </div>
            </div>

            <div class="row">
               <div class="col-lg-12">
                <div class="form-group">
                 {{ form_label(updateCategoryForm.labelEn, 'title.categ.en'|trans, {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateCategoryForm.labelEn , {'attr': {'class': 'form-control'}}) }} 
                </div>
              </div>
            </div>

            <div class="row">
               <div class="col-lg-12">
                <div class="form-group">
                 {{ form_label(updateCategoryForm.labelAr, 'title.categ.ar'|trans, {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateCategoryForm.labelAr , {'attr': {'class': 'form-control'}}) }} 
                </div>
              </div>
            </div>

           <div class="row">
               <div class="col-lg-12">
                <div class="form-group">
                 {{ form_label(updateCategoryForm.parent, 'sup.categ'|trans, {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateCategoryForm.parent , {'attr': {'class': 'form-control'}}) }} 
                </div>
              </div>
            </div>




         
     
          </div>
         <div class="pl-lg-4">
            <div class="row justify-content-center">
               
                 {{ form_widget(updateCategoryForm.addCateg , {'label': 'submit.update.categ'|trans}, {'attr': {'class': 'btn btn-primary my-4'}}) }}  
                
            </div>
        <div>          

        {{ form_end(updateCategoryForm) }} 
      </div>
    </div>
  </div>



















