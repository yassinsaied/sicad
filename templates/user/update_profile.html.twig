{% extends 'admin/baseBack.html.twig' %}

{% block content %}
  <!-- Page update profile user -->

  <div class="col-xl-8 order-xl-1">
    <div class="card">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col-8">
            <h3 class="mb-0">
              Edit My profile
            </h3>
          </div>
    
        </div>
      </div>
      <div class="card-body">
       {{ form_start(updateProfile, {'attr': {'novalidate': 'novalidate' , 'enctype':'multipart/form-data'}}) }}

       {{ form_errors(updateProfile) }}
          <h6 class="heading-small text-muted mb-4">
            User information
          </h6>
          <div class="pl-lg-4">
            <div class="row">
              <div class="col-lg-12">
                <div class="form-group">
                 {{ form_errors(updateProfile.email ) }}
                 {{ form_label(updateProfile.email, ' Email address', {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateProfile.email , {'attr': {'class': 'form-control' , 'id' : 'input-email'}}) }} 
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                 {{ form_errors(updateProfile.firstName ) }}
                 {{ form_label(updateProfile.firstName, ' First Name', {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateProfile.firstName , {'attr': {'class': 'form-control' , 'id' : 'input-first-name'}}) }} 
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                 {{ form_errors(updateProfile.lastName ) }}
                 {{ form_label(updateProfile.lastName, ' Last Name', {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateProfile.lastName , {'attr': {'class': 'form-control' , 'id' : 'input-last-name'}}) }} 
                </div>
              </div>
            </div>
          </div>
          <hr class="my-4" />
          <!-- Address -->
          <h6 class="heading-small text-muted mb-4">
            Contact information
          </h6>
          <div class="pl-lg-4">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                 {{ form_errors(updateProfile.address ) }}
                 {{ form_label(updateProfile.address, ' Address', {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateProfile.address , {'attr': {'class': 'form-control' , 'id' : 'input-adress'}}) }} 
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <div class="form-group">
                    {{ form_errors(updateProfile.tel) }}
                    {{ form_label(updateProfile.tel, ' Phone', {'label_attr': {'class': 'form-control-label'}}) }}
                    {{ form_widget(updateProfile.tel , {'attr': {'class': 'form-control' , 'id' : 'input-tel'}}) }} 
                </div>
              </div>
            </div>
          </div>
          <hr class="my-4" />
          <!-- Description -->
          <h6 class="heading-small text-muted mb-4">
           Administrative information
          </h6>
          <div class="pl-lg-4">
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                 {{ form_errors(updateProfile.gradJobe ) }}
                 {{ form_label(updateProfile.gradJobe, ' Administrative grade', {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateProfile.gradJobe , {'attr': {'class': 'form-control' , 'id' : 'input-grade-function'}}) }} 
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                 {{ form_errors(updateProfile.functionJob ) }}
                 {{ form_label(updateProfile.functionJob, ' Administrative function', {'label_attr': {'class': 'form-control-label'}}) }}
                 {{ form_widget(updateProfile.functionJob , {'attr': {'class': 'form-control' , 'id' : 'input-function-job'}}) }} 
                </div>
              </div>
            </div> 
          </div>
        

             {{ form_widget(updateProfile.thumbFile , {'attr': {'class': 'form-control' , 'id' : 'input-thumb-file'}}) }} 



         <div class="pl-lg-4">
            <div class="row">
                <div class="text-center">     
                         {{ form_widget(updateProfile.update , {'label': 'Update My Profile'}, {'attr': {'class': 'btn btn-primary my-4'}}) }}  
                  </div> 
            </div>
        <div>          

             


        
        {{ form_end(updateProfile) }} 
      </div>
    </div>
  </div>
{% endblock %}
